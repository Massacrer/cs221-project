<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uk.ac.aber.cs221.test"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RecordingManager"
            android:label="@string/title_activity_recording_manager"
            android:parentActivityName=".MainActivity"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity
            android:name=".NewRecordingActivity"
            android:finishOnTaskLaunch="true"
            android:label="@string/title_activity_new_recording"
            android:noHistory="true"
            android:parentActivityName=".MainActivity"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity
            android:name=".RecordingActivity"
            android:label="@string/title_activity_recording"
            android:parentActivityName=".RecordingManager" >
        </activity>
        <activity
            android:name=".RecordSpeciesActivity"
            android:label="@string/title_activity_record_species"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity
            android:name=".PhotoPickerActivity"
            android:label="@string/title_activity_photo_picker"
            android:parentActivityName=".RecordSpeciesActivity" >
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="uk.ac.aber.cs221.test.MainActivity" />
        </activity>
    </application>

</manifest>